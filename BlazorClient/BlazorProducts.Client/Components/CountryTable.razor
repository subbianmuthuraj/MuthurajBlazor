@if (Countries.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Country Name</th>
                <th scope="col">Official Name</th>
                <th scope="col">Country Code2</th>
                <th scope="col">Country Code3</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in Countries)
            {
                <tr>
                    <td>
                        <a href="/country/@country.Id">
                            <img src="@country.FlagSVG" alt="@country.CountryName" style="width:100px;" />
                        </a>
                    </td>
                    <td class="align-middle">
                        <a href="/country/@country.Id">
                            @country.OfficialName
                        </a>
                    </td>
                    <td class="align-middle">
                        @country.CountryName
                    </td>
                    <td class="align-middle">
                        @country.CountryCode2
                    </td>
                    <td class="align-middle">
                        @country.CountryCode3
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-info" href="/updateCountry/@country.Id">
                            Update
                        </a>
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-danger"
                        @onclick="() => CallConfirmationModel(country.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <Confirmation BodyMessage="Do you Want to Delete this Country?"
              OnOKClicked="DeleteCountry" @ref="_confirmation" />
}
else
{
    <span>Loading Countries....</span>
}

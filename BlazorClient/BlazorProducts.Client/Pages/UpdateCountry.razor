 @page "/updateCountry/{id:int}"
<h2>Update The Country</h2>
@if (_country != null)
{

    <EditForm EditContext="_editContext" OnValidSubmit="Update" class="card card-body bg-light mt-5">
        <DataAnnotationsValidator />

        <div class="mb-3 row">
            <label for="countryName" class="col-md-2 col-form-label">Country Name:</label>
            <div class="col-md-10">
                <InputText id="countryname" class="form-control" @bind-Value="_country.CountryName" />
                <ValidationMessage For="@(() => _country.CountryName)" />
            </div>
        </div>

        <div class="mb-3 row">
            <label for="countryCode2" class="col-md-2 col-form-label">Country Code2:</label>
            <div class="col-md-5">
                <InputText id="countrycode2" class="form-control" @bind-Value="_country.CountryCode2" />
                <ValidationMessage For="@(() => _country.CountryCode2)" />
            </div>
        </div>

        <div class="mb-3 row">
            <label for="countryCode3" class="col-md-2 col-form-label">Country Code3:</label>
            <div class="col-md-5">
                <InputText id="countrycode3" class="form-control" @bind-Value="_country.CountryCode3" />
                <ValidationMessage For="@(() => _country.CountryCode3)" />
            </div>
        </div>

        <div class="mb-3 row">
            <label for="OfficialName" class="col-md-2 col-form-label">Official Name:</label>
            <div class="col-md-10">
                <InputText id="OfficialName" class="form-control" @bind-Value="_country.OfficialName" />
                <ValidationMessage For="@(() => _country.OfficialName)" />
            </div>
        </div>
        <div class="mb-3 row">
            <label for="Region" class="col-md-2 col-form-label">Region:</label>
            <div class="col-md-10">
                <InputText id="Region" class="form-control" @bind-Value="_country.Region" />
                <ValidationMessage For="@(() => _country.Region)" />
            </div>
        </div>
        <div class="form-group row">
            <label for="image" class="col-md-2 col-form-label">Image:</label>
            <div class="col-md-10">
                <ImageUpload OnChange="AssignImageUrl" ImgUrl="@_country.FlagSVG" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-success float-end" disabled="@formInvalid">Update</button>
            </div>
        </div>

    </EditForm>
    <br />
    <div class="row">
        <div class="col">
            <a href="/countries" class="btn btn-success">Back</a>
        </div>
    </div>
}
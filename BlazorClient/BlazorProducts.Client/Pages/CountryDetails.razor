@page "/country/{CountryId:int}"

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <h2>@country.CountryName</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <img class="country-flag" src="@country.FlagSVG" alt="@country.CountryName" />
            </div>
            <div class="col-8">
                <div class="row">
                    <h3 class="country-code2">@country.CountryCode2</h3>
                </div>
                <div class="row">
                    <h3 class="country-code3">@country.CountryCode3 </h3>
                </div>
                <div class="row">
                    <h4 class="country-offname">@country.OfficialName </h4>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col">
        <a href="/countries" class="btn btn-success">Back</a>
    </div>
</div>
